@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade;
@{
  var backgroundImage = Text.Has(Header.Background)
    ? "background-image: url(" + Link.Image(url: Header.Background, width: 1600, quality: 60) + ");"
    : "";
}

<div class='container-outer app-counter2 @(Text.Has(Header.Background) ? "app-counter2-background " : "" )' style="@backgroundImage"
  @Edit.TagToolbar(Header, toolbar: "settings&hover=left&autoAddMore=start")>
  <div class="container-inner">
    <div class="app-counter2-wrapper">
      <div class="row">
        @foreach (var fact in AsList(Data)) {
          <div class="app-counter2-col col-12 col-sm-6 col-lg-3" @Edit.TagToolbar(fact, toolbar: "-layout")>
            <div class="app-counter2-item">
              <i class="co-icon fas @fact.Icon fa-3x" aria-hidden="true"></i>
              <div class="lead">
                <span class="app-counter2-js-@CmsContext.Module.Id" data-count="@fact.Number"></span>@(Text.Has(fact.Unit) ? " " + fact.Unit : "")
              </div>
              <span>@fact.Title</span>
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</div>

@Html.Partial("_Facts.PartAssets.cshtml")
